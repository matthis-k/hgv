<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.input.KeyCodeCombination?>

<Menu fx:id="editMenu" mnemonicParsing="false" onAction="#show" text="Bearbeiten" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="kit.pse.hgv.view.uiHandler.EditMenuHandler">
  <items>
    <MenuItem fx:id="redoItem" mnemonicParsing="false" onAction="#redo" text="Rückgängig">
         <accelerator>
            <KeyCodeCombination alt="UP" code="Z" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
         </accelerator></MenuItem>
      <MenuItem fx:id="undoItem" mnemonicParsing="false" onAction="#undo" text="Wiederherstellen">
         <accelerator>
            <KeyCodeCombination alt="DOWN" code="Z" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
         </accelerator>
      </MenuItem>
  </items>
</Menu>
